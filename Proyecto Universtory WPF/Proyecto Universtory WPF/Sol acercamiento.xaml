<Page x:Class="Proyecto_Universtory_WPF.Sol_acercamiento"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proyecto_Universtory_WPF"
      mc:Ignorable="d"
      Title="Sol_acercamiento" Width="1025" Height="770">
    <Page.Background>
        <ImageBrush ImageSource="Recursos/Sol.jpg" Stretch="UniformToFill"/>
    </Page.Background>

    <Grid>
        <Slider x:Name="sliderSol" Margin="30,0,640,25" Background="Black" Foreground="Black" Height="45" VerticalAlignment="Bottom" Maximum="100" TickFrequency="20" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged" TickPlacement="BottomRight" BorderBrush="#00080000"/>

    </Grid>
</Page>
