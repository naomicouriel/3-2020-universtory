<Window x:Class="Proyecto_Universtory_WPF.Datos_Sol_E1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Universtory_WPF"
        mc:Ignorable="d"
        Title="Datos_Sol_E1" Height="500" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/fondo.png"/>
        </Grid.Background>
        <TextBlock Name ="datSolE1txt" Text="El Sol y el resto del sistema solar se formaron a partir de una nube gigante y giratoria de gas y polvo llamada nebulosa solar hace unos 4.500 millones de años. Cuando la nebulosa colapsó debido a su abrumadora gravedad, giró más rápido y se aplanó en un disco. La mayor parte del material fue arrastrado hacia el centro, volviéndose cada vez más denso y caliente, dando lugar con el tiempo al inicio de la fusión nuclear en su núcleo, para formar nuestro Sol." HorizontalAlignment="Left" Height="156" Margin="64,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="586" Foreground="White" FontFamily="space quest" FontSize="19"/>
        <Button Name ="salirDatSolE1" Content="" HorizontalAlignment="Left" Height="50" Margin="580,377,0,0" VerticalAlignment="Top" Width="180" FontFamily="Space Quest" Foreground="White" Click="Button_Click" BorderBrush="{x:Null}" FontSize="24">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Recursos/atrás.png"/>
            </Button.Background>
        </Button>
        <Label Content="PRIMERA ETAPA" HorizontalAlignment="Left" Height="48" Margin="64,49,0,0" VerticalAlignment="Top" Width="224" Foreground="WHITE" FontFamily="space quest" FontSize="26"/>

    </Grid>
</Window>
