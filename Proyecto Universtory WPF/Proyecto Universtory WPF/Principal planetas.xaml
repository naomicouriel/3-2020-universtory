                <SolidColorBrush Color="White" Opacity="0.01"/>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse x:Name="btnSol" HorizontalAlignment="Left" Height="170" Margin="630,310,0,0" VerticalAlignment="Top" Width="170" MouseLeftButtonDown="BtnSolClick" Opacity="0.2">
            <Ellipse.Fill>
                <SolidColorBrush Color="White" Opacity="0.01"/>
            </Ellipse.Fill>
        </Ellipse>
        <Button Name="VolPPbtn" Content="" HorizontalAlignment="Left" Height="50" Margin="1075,700,0,0" VerticalAlignment="Top" Width="272" FontFamily="space quest" FontSize="24" Click="VolPPbtn_Click" BorderBrush="{x:Null}" Style="{DynamicResource btnInicio}">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Recursos/atrás.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>
