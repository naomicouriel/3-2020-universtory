                <SolidColorBrush Color="White" Opacity="0.01"/>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse x:Name="btnSaturno" HorizontalAlignment="Left" Height="95" Margin="193,423,0,0" VerticalAlignment="Top" Width="95" MouseLeftButtonDown="btnSaturno_MouseLeftButtonDown">
            <Ellipse.Fill>
                <SolidColorBrush Color="White" Opacity="0.01"/>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse x:Name="btnJupiter" HorizontalAlignment="Left" Height="95" Margin="1068,227,0,0" VerticalAlignment="Top" Width="93" MouseLeftButtonDown="btnJupiter_MouseLeftButtonDown">
