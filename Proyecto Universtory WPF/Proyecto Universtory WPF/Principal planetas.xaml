                <SolidColorBrush Color="White" Opacity="0.01"/>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse x:Name="btnMarte" HorizontalAlignment="Left" Height="59" Margin="905,240,0,0" VerticalAlignment="Top" Width="57" MouseLeftButtonDown="btnMarte_MouseLeftButtonDown">
