        </Ellipse>
        <Ellipse x:Name="btnUrano" HorizontalAlignment="Left" Height="75" Margin="1065,422,0,0" VerticalAlignment="Top" Width="75" MouseLeftButtonDown="btnUrano_MouseLeftButtonDown">
