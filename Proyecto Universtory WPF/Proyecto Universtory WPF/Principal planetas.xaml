                <SolidColorBrush Color="White" Opacity="0.01"/>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse x:Name="btnVenus" HorizontalAlignment="Left" Height="60" Margin="550,455,0,0" VerticalAlignment="Top" Width="60" MouseLeftButtonDown="btnVenus_MouseLeftButtonDown">
