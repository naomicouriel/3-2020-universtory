                <SolidColorBrush Color="White" Opacity="0.01"/>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse x:Name="btnTierra" HorizontalAlignment="Left" Height="60" Margin="425,390,0,0" VerticalAlignment="Top" Width="65" MouseLeftButtonDown="btnTierra_MouseLeftButtonDown" Opacity="0.2">
